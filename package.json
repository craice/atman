{
  "name": "atman-ds",
  "version": "0.1.0",
  "description": "A lean, accessible, and modern Design System built with Web Components",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./tokens": {
      "import": "./dist/tokens/index.css"
    },
    "./tokens.json": {
      "import": "./dist/tokens/tokens.json"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "export-tokens": "node scripts/export-tokens.js",
    "export-tokens-studio": "node scripts/generate-tokens-studio.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "changelog:all": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch"
  },
  "keywords": [
    "design-system",
    "web-components",
    "lit",
    "accessible",
    "ui-components",
    "atman"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/craice/atman.git"
  },
  "homepage": "https://craice.github.io/atman",
  "bugs": {
    "url": "https://github.com/craice/atman/issues"
  },
  "dependencies": {
    "lit": "^3.2.0",
    "lucide": "^0.468.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^10.2.3",
    "@storybook/addon-docs": "^10.2.3",
    "@storybook/addon-links": "^10.2.3",
    "@storybook/web-components-vite": "^10.2.3",
    "@vitest/ui": "^4.0.18",
    "conventional-changelog-cli": "^5.0.0",
    "happy-dom": "^20.4.0",
    "standard-version": "^9.5.0",
    "storybook": "^10.2.3",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^4.0.18"
  }
}
